CC=gcc
CFLAGS=-g -Wall -std=c99 -pthread 

OBJDIR=build

Debug: bobtest

Release: bobtest

default: bobtest

bobtest: init bobutils.o bobipc.o bobutils.h bobipc.h
	$(CC) $(CFLAGS) bobtest.c -o $(OBJDIR)/bobtest $(OBJDIR)/bobutils.o $(OBJDIR)/bobipc.o

bobipc.o: init bobutils.o bobutils.h bobprimitives.h bobipc.h
	$(CC) $(CFLAGS) -c bobipc.c -o $(OBJDIR)/bobipc.o 

bobutils.o: bobprimitives.h bobutils.h
	$(CC) $(CFLAGS) -c bobutils.c -o $(OBJDIR)/bobutils.o

init: 
	- mkdir -p $(OBJDIR)

clean:
	- rm -rf $(OBJDIR)